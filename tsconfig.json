{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es6", "dom"],
    //"module": "system", //amd system
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./lib/",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types" : ["node", "jasmine"],
    // "declarationDir": "definitions",
    // "outFile": "./dist/index.js"
  },
  "include": [
    "index.ts",
    "src/**/*",
    "spec/**/*"
  ]
}
